{
    "name": "showyweb/quick-dbm",
    "description": "Quick database manager",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "SHOWYWeb",
            "homepage": "https://github.com/showyweb"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.0",
        "ext-pdo": "*",
      "ext-mbstring": "*"
    },
    "autoload": {
        "classmap": [
             "src/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload-dev": {
        "psr-4": {
            "showyweb\\qdbm\\tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit tests/ExtToolsTest.php tests/WhereTest.php tests/SchemaTest.php tests/SelectQTest.php",
        "test-integration": "phpunit tests/DatabaseTest.php",
        "test-sqlite": "DB_DRIVER=sqlite phpunit",
        "test-mysql": "DB_DRIVER=mysql phpunit tests/DatabaseTest.php"
    }
}
